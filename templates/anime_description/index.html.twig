        <div>
            <img id="animeimage" src="{{ anime.image }}" width="250" height="350"/>
        </div>
        <div id="description">
            <h1><strong>{{ anime.title }}</strong></h1><br/>
            {{ anime.description }}
        </div>
    </div>
{% endblock %}
